@model IEnumerable<Racecar_Tracker_By_UherkaMotorsports.Models.Crew>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nights)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tires)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Springs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nights)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tires)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Springs)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
